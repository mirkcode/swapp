<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="15dp"
    app:cardElevation="18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/black_bottom_left_radius_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="@style/TextView"
            tools:text="1985"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/year_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="12dp"
            android:textSize="20sp"
            android:lineSpacingMultiplier="0.85"
            style="@style/TextView.Bold"
            tools:text="Star Wars 2"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/year_txt"
            android:id="@+id/title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="12sp"
            style="@style/TextView.Light"
            tools:text="This is a beautiful description of the film, This is a beautiful description of the film, This is a beautiful description of the film, This is a beautiful description of the film, This is a beautiful description of the film, "
            android:textColor="@color/black"
            android:lineSpacingMultiplier="0.85"
            app:layout_constraintTop_toBottomOf="@id/title_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/openingCrawl_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>